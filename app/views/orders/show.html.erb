<p id="notice"><%= notice %></p>

<p>
  <strong>ID:</strong>
  <%= @order.id %>
</p>

<p>
  <strong>Total:</strong>
  <%= format_price(@order.total) %>
</p>

<p>
  <strong>Date:</strong>
  <%= @order.created_at %>
</p>

<p>
  <strong>Items:</strong>
  <ul>
  <% @order.items.each do |item| %>
    <li>
      <%= item.product.name %> (Qty: <%= item.quantity %>)
    </li>
  <% end  %>
  </ul>
</p>

<%= link_to 'Back', orders_path %>
